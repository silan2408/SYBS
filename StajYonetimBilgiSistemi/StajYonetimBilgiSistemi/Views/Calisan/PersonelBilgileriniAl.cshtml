@using StajYonetimBilgiSistemi.Models.Entity
@model List<StajYonetimBilgiSistemi.Models.Entity.KURUM_PERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kurumunuzdaki Personel Bilgileri</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                Şirket
            </td>
            <td>
                Departman
            </td>
            <td>
                Adı
            </td>
            <td>
                Soyadı
            </td>
            <td>
                Unvan
            </td>
            <td>
                GSM
            </td>
            <td>
                Email
            </td>
      
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KURUM_TANIM.FIRMA_ADI</td>
                <td>@item.KURUM_DEPARTMAN.ADI</td>
                <td>@item.ADI</td>
                <td>@item.SOYADI</td>
                <td>@item.UNVAN</td>
                <td>@item.GSM</td>
                <td>@item.EMAIL</td>
               

            </tr>
        }
    </tbody>
</table>
