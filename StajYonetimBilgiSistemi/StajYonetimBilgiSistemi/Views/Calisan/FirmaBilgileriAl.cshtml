
@model StajYonetimBilgiSistemi.Models.Entity.KURUM_TANIM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 style="text-align:center;margin-bottom:20px;margin-left:0px;margin-right:0px;">Firma Bilgileri</h3>
<br />
<br />
<div class="container" style="margin-top:30px; margin:auto; display: grid;margin-bottom:-65px; grid-gap: 40px; grid-template-columns: 400px 400px 280px;  color: #444; text-align:center;font-size:small;padding-left:0px;">
 
        <div class="form-group" style="background-color: #10b2d6; color: #fff; border-radius: 30px; padding: 30px; font-size: 150%; grid-column: 1 / 3; grid-row: 1; text-align: center; ">
            @Html.HiddenFor(x => x.PK_KURUM_TANIM)
            <b>Kurum Adı:</b>
            @Html.DisplayFor(x => x.FIRMA_ADI, new { @class = "form-control" })
        </div>
        <br />
        <div class="form-group" style="word-wrap: break-word; background-color: #808080; color: #fff; border-radius: 30px; padding: 20px; font-size: 150%; grid-column: 3/4; grid-row: 1; ">

            <b>Mail Adresi:</b>
            <br />
            <div style="box-sizing: border-box; word-wrap: break-word;">
                @Html.DisplayFor(x => x.EMAIL, new { @class = "form-control" })
            </div>
          
        </div>
        <br />

        <div class="form-group" style="background-color: #808080; color: #fff; border-radius: 30px; padding: 20px; font-size: 150%; grid-column: 1; grid-row: 2; ">
            <b>Kurum Adresi:</b>
            <br />
            @Html.DisplayFor(x => x.FIRMA_ADRESİ, new { @class = "form-control" })
        </div>
        <br />

        <div class="form-group" style="background-color: #808080; color: #fff; border-radius: 30px; padding: 42px; font-size: 150%; grid-column: 3/4; grid-row: 2; ">
            <b>Telefon:</b>
            <br />
            @Html.DisplayFor(x => x.TELEFON, new { @class = "form-control" })
        </div>
        <br />
        <div class="form-group" style="background-color: #808080; color: #fff; border-radius: 30px; padding: 50px; font-size: 150%; grid-column: 2; grid-row: 2; ">
            <b>Kurum Yetkilisi:</b>
            <br />
            @Html.DisplayFor(x => x.FIRMA_YEKTILISI, new { @class = "form-control" })
        </div>

     
</div>
