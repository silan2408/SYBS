
@using StajYonetimBilgiSistemi.Models.Entity
@model List<StajYonetimBilgiSistemi.Models.Entity.Kullanicilar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;">Kullanıcı Listesi</h3>

<table class="table table-bordered"  style=" display: block; overflow-x: auto; white-space: nowrap;">
    <thead>
        <tr>
            <td>
                ID
            </td>
            <td>
                Kullanıcı Adı
            </td>
            <td>
                Ad Soyad
            </td>
            <td>
                Email
            </td>
            <td>
                Sifre
            </td>
            <td>
                Sifre Kontrol
            </td>
            <td>
                Kayıt Tarihi
            </td>
            <td>
                Rol
            </td>
            <td>
               Şirketi
            </td>
            <td>
                Departmanı
            </td>
            <td>
                Personel İsmi
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.KullaniciAdi</td>
                <td>@item.AdiSoyadi</td>


                <td>@item.Email</td>
                <td>@item.Sifre</td>
                <td>@item.SifreKontrol</td>

                <td>@item.KayitTarihi.ToShortDateString()</td>
                <td>@item.Rol</td>

                @if (@item.CalisanKurumTanim != null)
                {
                    <td>@item.KURUM_TANIM.FIRMA_ADI</td>

                }
                @if (@item.CalisanKurumTanim == null)
                {
                    <td></td>
                }
                @if (@item.CalisanDepartman != null)
                {
                    <td>@item.KURUM_DEPARTMAN.ADI</td>

                }
                @if (@item.CalisanDepartman == null)
                {
                    <td></td>
                }
                @if (@item.CalisanPersonel != null)
                {
                    <td>@item.KURUM_PERSONEL.ADI</td>

                }
                @if (@item.CalisanPersonel == null)
                {
                    <td></td>
                }

                <td><a href="/Kullanici/SilBilgiGetir/@item.Id" class="btn btn-warning">Sil</a></td>
                <td><a href="/Kullanici/GuncelleBilgiGetir/@item.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }

    </tbody>

</table>
