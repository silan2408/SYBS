@using StajYonetimBilgiSistemi.Models.Entity
@model IEnumerable<StajYonetimBilgiSistemi.Models.Entity.KURUM_TANIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<style>
    .webgrid-table {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 1.2em;
        width: 100%;
        display: table;
    }

    .webgrid-header {
        background-color: #d4caca;
        color: #808080;
        padding-bottom: 4px;
        padding-top: 5px;
        text-align: left;
    }

    .webgrid-table td, th {
        border: 1px solid #808080;
        padding: 3px 7px 2px;
    }
</style>
<h2 style="text-align:center;margin-bottom:20px;">~Kurumlar Listesi~</h2>
@using (Html.BeginForm())
{
    <div style="margin-right:45px;width:500px;float:right;display:flex;margin-top:20px;margin-bottom:30px;">

        @Html.TextBox("ara", null, new { @class = "form-control", @placeholder = "Kurum Ara" })
        <button type="submit" class="btn btn-primary">Ara </button>

    </div>
}
<br />
@grid.GetHtml(
      tableStyle: "webgrid-table",
     headerStyle: "webgrid-header",
    columns: grid.Columns(
    grid.Column("PK_KURUM_TANIM", "Id"),
    grid.Column("FIRMA_ADI", "Firma Adı"),
    grid.Column("FIRMA_YEKTILISI", "Firma Yetkilisi"),
    grid.Column("FIRMA_ADRESİ", "Firma Adresi"),
    grid.Column("TELEFON", "Telefon"),
    grid.Column("EMAIL", "Email"),


    grid.Column("Güncelle", header: null, format: @<text>@Html.ActionLink(
"Seç", "GuncelleBilgiGetir", new { id = item.PK_KURUM_TANIM })</text>),
grid.Column("Sil", header: null, format: @<text>@Html.ActionLink(
"Seç", "SilBilgiGetir", new { id = item.PK_KURUM_TANIM })</text>)
)
)
<br />
<a href="/KurumTanim/KurumEkle/" class="btn btn-success" style="margin-top">Kurum Ekle</a>