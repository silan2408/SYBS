@model StajYonetimBilgiSistemi.Models.Entity.STAJYER_TANIM
@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GuncelleBilgiGetir</h2>


<div class="container">
    <form action="/SirketYetkilisi/GuncelleStajyer/" method="post">

        @Html.HiddenFor(x => x.PK_STAJYER_TANIM)
        <div class="form-group">
            <b>Adı</b>

            @Html.TextBoxFor(x => x.ADI, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <b>Soyadı </b>

            @Html.TextBoxFor(x => x.SOYADI, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <b>Üniversite</b>


            @Html.DropDownListFor(m => m.UNIVERSITE, (List<SelectListItem>)ViewBag.dgr4, "---Seçiniz---", new { @class = "form-control" })

        </div>
        <div class="form-group">
            <b>Üniversite No</b>

            @Html.TextBoxFor(x => x.UNIV_NO, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <b>Bölümü </b>
            @Html.DropDownListFor(m => m.BOLUMU, (List<SelectListItem>)ViewBag.dgr5, "---Seçiniz---", new { @class = "form-control" })


        </div>
        <div class="form-group">
            <b>Sınıfı</b>

            @Html.TextBoxFor(x => x.SINIFI, new { @class = "form-control" })


        </div>
        <div class="form-group">
            <b>Email</b>

            @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <b>Telefon </b>

            @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <b>Staj Yılı</b>

            @Html.TextBoxFor(x => x.STAJ_YILI, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <b>Staj Başlama Tarihi</b>
            @Html.TextBoxFor(x => x.STAJ_BAS_TARIHI, "{0:yyyy-MM-dd}", new
{
@class = "form-control",
required = "required",
@type = "date"
})

        </div>
        <div class="form-group">
            <b>Staj Bitiş Tarihi </b>

            @Html.TextBoxFor(x => x.STAJ_BIT_TARIHI, "{0:yyyy-MM-dd}", new
      {
      @class = "form-control",
      required = "required",
      @type = "date"
      })
        </div>
        <div class="form-group">
            <label>Kurum Staj Sorumlusu</label>
            @Html.DropDownListFor(m => m.KURUM_ST_SORUMLUSU, (List<SelectListItem>)ViewBag.dgr, "---Seçiniz---", new { @class = "form-control" })

        </div>
        <div class="form-group">
            <label>Kurum Onaylayan Kişi</label>
            @Html.DropDownListFor(m => m.KURUM_ONAY_KISI, (List<SelectListItem>)ViewBag.dgr1, "---Seçiniz---", new { @class = "form-control" })


        </div>
        <div class="form-group">
            <label>Staj Kurumu</label>
            @Html.DropDownListFor(m => m.FK_STAJ_KURUM, (List<SelectListItem>)ViewBag.dgr2, "---Seçiniz---", new { @class = "form-control" })


        </div>
        <div class="form-group">
            <label>Departman</label>
            @Html.DropDownListFor(m => m.FK_DEPARTMAN, (List<SelectListItem>)ViewBag.dgr3, "---Seçiniz---", new { @class = "form-control" })


        </div>
        <div>
            <button class="btn btn-primary"> Stajyer Güncelle</button>
            <a href="/SirketYetkilisi/StajerBilgileriniAl/">Ana Sayfa </a>
        </div>
    </form>
</div>