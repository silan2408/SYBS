    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GuncelleBilgiGetir</h2>

<div class="container">
    <form action="/SirketYetkilisi/GuncellePersonel/">
