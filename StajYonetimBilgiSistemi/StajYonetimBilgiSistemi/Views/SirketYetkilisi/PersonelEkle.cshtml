@model StajYonetimBilgiSistemi.Models.Entity.KURUM_PERSONEL
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form action="/SirketYetkilisi/PersonelEkle2/" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group" style="width:520px;float:left;">
            <label>Kurum :</label>
            <br />
            <b class="form-control" style="margin-left: 0px; font-size: large; border-radius: 5px; border-style: groove; width: 520px; background-color: #b200ff; color: white; text-align: center;">
                @ViewBag.dgr2
            </b>

        </div>
        <div class="form-group" style="width:520px;float:right;">
            <label>Kurum Departman Seç</label>

            @Html.DropDownListFor(m => m.FK_KURUM_DEPARTMAN, (List<SelectListItem>)ViewBag.dgr, "---Seçiniz---", new { @class = "form-control" })

        </div>
        <div style="clear:both;"></div>
        <div class="form-group" style="width:520px;float:left;">
            <label>Adı</label>
            <input type="text" name="ADI" class="form-control" required />

        </div>
        <div class="form-group" style="width:520px;float:right;">
            <label>Soyad</label>
            <input type="text" name="SOYADI" class="form-control" required />

        </div>
        <div style="clear:both;"></div>
        <div class="form-group" style="width:520px;float:left;">
            <label>Unvan</label>
            <input type="text" name="UNVAN" class="form-control" required />

        </div>
        <div class="form-group" style="width:520px;float:right;">
            <label>GSM</label>
            <input type="text" name="GSM" class="form-control" placeholder="530-000-00-00" required />

        </div>
        <div style="clear:both;"></div>
        <div class="form-group" style="width:520px;float:left;">
            <label>Email</label>
            <input type="email" name="EMAIL" class="form-control" placeholder="....gmail.com"
                   required />

        </div>
        <div style="clear:both;"></div>
        <div class="w3-panel w3-red" style="float:right;">
            <h3 style="color:red;">@TempData["mesaj"]</h3>
        </div>
        <div class="form-group">
            <button class="btn btn-success">Personel Ekle</button>
            <a href="/SirketYetkilisi/PersonelBilgileriniAl/">Geri Dön</a>
        </div>
    </form>
</div>
