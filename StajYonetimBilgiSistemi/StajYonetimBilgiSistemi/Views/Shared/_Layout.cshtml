@using StajYonetimBilgiSistemi.ActiveFolder
@using StajYonetimBilgiSistemi.Models.Entity

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Staj Yönetim Bilgi Sistemi</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Custom fonts for this template-->
    <link href="~/image/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <script src="~/Scripts/jquery.validate.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.css" />
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Css/sb-admin-2.min.css" rel="stylesheet">
    @Scripts.Render("~/Scripts/chart.min.js")
    @Scripts.Render("~/Scripts/Common.js")
</head>

<body id="page-top ">

    <!-- Page Wrapper -->
    <div id="wrapper">


        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion " id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Home/index/">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="bi bi-emoji-smile"></i>
                </div>

                @{
                    if (User.IsInRole("Admin"))
                    {
                        <a class="sidebar-brand-text mx-3" style="color: aliceblue; text-align: center;">Admin Paneli</a>
                    }
                    else if (User.IsInRole("Stajyer"))
                    {
                        <a class="sidebar-brand-text mx-3" style="color: aliceblue; text-align: center;">Stajyer Paneli</a>
                    }
                    else if (User.IsInRole("Calisan"))
                    {
                        <a class="sidebar-brand-text mx-3" style="color: aliceblue; text-align: center;">Çalışan Paneli</a>
                    }
                    else if (User.IsInRole("SirketYetkilisi"))
                    {
                        <a class="sidebar-brand-text mx-3" style="color:aliceblue;text-align:center;">Şirket Yetkilisi Paneli</a>
                    }
                    else if (User.IsInRole(" "))
                    {
                        <a class="sidebar-brand-text mx-3" style="color:aliceblue;text-align:center;">Stajınızın onaylanmasını bekleyiniz.</a>
                    }
                }

            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">





            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Menü
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">

                @if (User.IsInRole("Stajyer"))
                {

                <li class="nav-item @Html.ActivePage("GunlukCalisma","FirmaBilgileriAl")"><a class="nav-link text-black" href="/GunlukCalisma/FirmaBilgileriAl/">Kurum Bilgilerini Görüntüle</a></li>

                <li class="nav-item @Html.ActivePage("GunlukCalisma", "Stajlar")"><a class="nav-link text-black " href="/GunlukCalisma/StajBilgileri/">Stajlarım</a></li>
                <li class="nav-item @Html.ActivePage("GunlukCalisma", "Basvurular")"><a class="nav-link text-black " href="/GunlukCalisma/Basvurular/">Başvurularım</a></li>

                <li class="nav-item @Html.ActivePage("GunlukCalisma", "Index")"><a class="nav-link text-black " href="/GunlukCalisma/Index/">Günlük Çalışma Kaydet</a></li>

                <li class="nav-item @Html.ActivePage("GunlukCalisma", "Calendar")"><a class="nav-link text-black " href="/GunlukCalisma/Calendar/">Takvim</a></li>
                <li class="nav-item @Html.ActivePage("GunlukCalisma", "AktifStajlar")"><a class="nav-link text-black " href="/GunlukCalisma/AktifStajlar/">Diğer Stajlar</a></li>

            }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item @Html.ActivePage("KurumTanim","Index")"><a class="nav-link text-black" href="/KurumTanim/Index">Kurum Tanımlama</a></li>
                    <li class="nav-item @Html.ActivePage("KurumPersonel","Index")"><a class="nav-link text-black" href="/KurumPersonel/Index">Kurum Personel</a></li>
                    <li class="nav-item @Html.ActivePage("KurumDepartman","Index")"><a class="nav-link text-black" href="/KurumDepartman/Index">Kurum Departman</a></li>
                    <li class="nav-item @Html.ActivePage("StajyerTanim","Index")"><a class="nav-link text-black " href="/StajyerTanim/Index">Stajyer Tanımlama</a></li>
                    <li class="nav-item @Html.ActivePage("Home","KullaniciList")"><a class="nav-link text-black " href="/Kullanici/KullaniciList">Kullanıcı Listesi</a></li>
                    <li class="nav-item @Html.ActivePage("Kullanici","Stajlar")"><a class="nav-link text-black " href="/Kullanici/Stajlar">Tüm Stajları Görüntüle</a></li>
                    <li class="nav-item @Html.ActivePage("Kullanici","Basvurular")"><a class="nav-link text-black " href="/Kullanici/Basvurular">Tüm Başvuruları Görüntüle</a></li>

                }
                @if (User.IsInRole("Calisan"))
                {
                    <li class="nav-item @Html.ActivePage("Calisan","FirmaBilgileriAl")"><a class="nav-link text-black" href="/Calisan/FirmaBilgileriAl/">Kurum Bilgilerini Görüntüle</a></li>
                    <li class="nav-item @Html.ActivePage("Calisan","PersonelBilgileriniAl")"><a class="nav-link text-black" href="/Calisan/PersonelBilgileriniAl/">Kurum Personelerini Görüntüle</a></li>
                    <li class="nav-item @Html.ActivePage("Calisan","StajerBilgileriniAl")"><a class="nav-link text-black" href="/Calisan/StajerBilgileriniAl/">Kurum Stajyerlerini Görüntüle</a></li>
                    <li class="nav-item @Html.ActivePage("Calisan","Stajlar")"><a class="nav-link text-black" href="/Calisan/Stajlar/">Aktif Stajlar</a></li>
                    <li class="nav-item @Html.ActivePage("Calisan","SorumluOlunanStajyerler")"><a class="nav-link text-black" href="/Calisan/SorumluOlunanStajyerler/">Sorumlu Olduğum Stajyerler</a></li>
                }
                @if (User.IsInRole("SirketYetkilisi"))
                {
                    <li class="nav-item @Html.ActivePage("SirketYetkilisi","FirmaBilgileriAl")"><a class="nav-link text-black" href="/SirketYetkilisi/FirmaBilgileriAl/">Kurum Bilgilerini Görüntüle</a></li>
                    <li class="nav-item @Html.ActivePage("SirketYetkilisi","PersonelBilgileriniAl")"><a class="nav-link text-black" href="/SirketYetkilisi/PersonelBilgileriniAl/">Kurum Personelerini Görüntüle</a></li>
                    <li class="nav-item @Html.ActivePage("SirketYetkilisi","StajerBilgileriniAl")"><a class="nav-link text-black" href="/SirketYetkilisi/StajerBilgileriniAl/">Kurum Stajyerlerini Görüntüle</a></li>
                    <li class="nav-item @Html.ActivePage("SirketYetkilisi","Stajlar")"><a class="nav-link text-black" href="/SirketYetkilisi/Stajlar/">Tüm Stajlar</a></li>
                    <li class="nav-item @Html.ActivePage("SirketYetkilisi","Stajlarım")"><a class="nav-link text-black" href="/SirketYetkilisi/SorumluOlunanStajyerler/">Sorumlu Olduğum stajyerler</a></li>
                    <li class="nav-item @Html.ActivePage("SirketYetkilisi","Basvuru")"><a class="nav-link text-black" href="/SirketYetkilisi/Basvurular/">Başvurular</a></li>
                }
                @if (User.IsInRole(""))
                {
                    <li class="nav-item @Html.ActivePage("Home","Index")"><a class="nav-link text-black" href="/Home/Index/">Anasayfa</a></li>

                    <li class="nav-item @Html.ActivePage("Home","AktifStajlar")"><a class="nav-link text-black" href="/Home/AktifStajlar/">Stajlar</a></li>

                }
                </li>


                <!-- Divider -->
                <hr class="sidebar-divider d-none d-md-block">

                <!-- Sidebar Toggler (Sidebar) -->
                <div class="text-center d-none d-md-inline">
                    <button class="rounded-circle border-0" id="sidebarToggle">          </button>
                </div>


            </ul>
            <!-- End of Sidebar -->
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                        <!-- Sidebar Toggle (Topbar) -->
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="bi bi-emoji-smile"></i>
                        </button>

                        <!-- Topbar Search -->
                        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search text-black">
                            <h3 style="color: #b7b9cc;">Staj Yönetim bilgi sistemi</h3>
                        </form>

                        <!-- Topbar Navbar -->
                        <ul class="navbar-nav ml-auto">



                            <!-- Nav Item - Messages -->
                            <li class="nav-item dropdown no-arrow mx-1">
                                <a class="nav-link " href="/Mesaj/Index/" role="button"
                                   aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-chat-left-dots-fill" style="color:black;"></i>
                                    <!-- Counter - Messages -->
                                    <span class="badge badge-danger badge-counter"></span>
                                </a>


                            </li>

                            <div class="topbar-divider d-none d-sm-block"></div>

                            @if (User.IsInRole("Stajyer") || User.IsInRole("Admin") || User.IsInRole("Calisan") || User.IsInRole("SirketYetkilisi") || User.IsInRole(""))
                            {
                                <!-- Nav Item - User Information -->
                                <li class="nav-item dropdown no-arrow">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="mr-2 d-none d-lg-inline text-gray-600 text-lg-center text-black"> @User.Identity.Name</span>
                                        <img class="img-profile rounded-circle"
                                             src="https://w7.pngwing.com/pngs/527/663/png-transparent-logo-person-user-person-icon-rectangle-photography-computer-wallpaper-thumbnail.png">

                                    </a>
                                    <!-- Dropdown - User Information -->
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                         aria-labelledby="userDropdown">
                                        <a class="dropdown-item" href="~/Home/GuncelleBireysel/">
                                            <i class="bi bi-journals"></i>
                                            Bilgileri Güncelle
                                        </a>

                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" data-toggle="modal" data-target="#logoutModal">
                                            <i class="bi bi-box-arrow-right"></i>
                                            Çıkış
                                        </a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item @Html.ActivePage("Home","Login")"><a class="nav-link active" href="/Home/Login">Giriş Yap</a></li>
                                <li class="nav-item @Html.ActivePage("Home","Register")"><a class="nav-link active" href="/Home/Register">Kayıt Ol</a></li>
                            }

                        </ul>

                    </nav>

                    @RenderBody()

                </div>
                <!-- End of Main Content -->


            </div>
            <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="/Home/Logout/">Logout</a>
                    </div>
                </div>
            </div>
        </div>



        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <script src="~/Scripts/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js" integrity="sha512-0QbL0ph8Tc8g5bLhfVzSqxe9GERORsKhIn1IrpxDAgUsbBGz/V7iSav2zzW325XGd1OMLdL4UiqRJj702IeqnQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <script src="~/Scripts/sb-admin-2.min.js"></script>

        <script src="~/Scripts/Chart.min.js"></script>

        <script src="~/Scripts/chart-area-demo.js"></script>

        <script src="~/Scripts/chart-pie-demo.js"></script>
        @RenderSection("Scripts", false)



    </body>

</html>


