@{
    Layout = null;

}
@using StajYonetimBilgiSistemi.Models.Entity

@model List<StajYonetimBilgiSistemi.Models.Entity.Stajlar>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Staj Yönetim Bilgi Sistemi</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->

    <link href="~/Css/vendor/apple-touch-icon.png" />
    <link href="~/Css/vendor/favicon.png" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Poppins:300,400,500,700" rel="stylesheet">

    <!-- Vendor CSS Files -->

    <link href="~/Css/vendor/aos/aos.css" rel="stylesheet" />
    <link href="~/Css/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Css/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Css/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/Css/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />
    <link href="~/Css/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Template Main CSS File -->

    <link href="~/Css/vendor/regnacss.css" rel="stylesheet" />

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex justify-content-between align-items-center">

            <div id="logo" style="color:black;font-size:x-large;">
                Staj Yönetim Bilgi Sistemi
                <!-- Uncomment below if you prefer to use a text logo -->
                <!--<h1><a href="index.html">Regna</a></h1>-->
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto " style="color:black;" href="~/Home/Login/">Giriş Yap</a></li>
                    <li><a class="nav-link scrollto" style="color:black;" href="~/Home/Register/">Kayıt Ol</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div class="hero-container" data-aos="zoom-in" data-aos-delay="100">
            <h1 style="color:black;">Sisteme Hoş Geldiniz</h1>
            <a style="color:black;" href="#about" class="btn-get-started">Stajlar</a>
        </div>
    </section><!-- End Hero Section -->

    <main id="main">

        <!-- ======= About Section ======= -->
        <section id="about">
            <div class="container" data-aos="fade-up">
                <div class="row about-container">


                    <h2 class="title">Akfit Stajlar</h2>
                    <p>
                        Sistemdeki stajlara başvurmak için kayıt olunuz .
                    </p>
                    <table class="styled-table" style=" border-collapse: collapse; margin: 25px 0; font-size: 1.5em; font-family: sans-serif; min-width: 400px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);">
                        <thead style=" background-color: #808080; color: #ffffff; text-align: left;  ">

                            <tr style=" padding: 12px 15px;">
                                <th>Staj Adı</th>
                                <th>Staj Kurumu</th>
                                <th>Staj Departmanı</th>
                                <th>Staj Başlangıç ve bitiş tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Baslik</td>
                                    <td>@item.KURUM_TANIM.FIRMA_ADI</td>  
                                    <td>@item.KURUM_DEPARTMAN.ADI</td>
                                    <td>@item.Staj_Bas_Tarihi.ToShortDateString() - @item.Staj_Bit_Tarihi.ToShortDateString()</td>
                                </tr>
                            }


                            <!-- and so on... -->
                        </tbody>
                    </table>


                    <div class="col-lg-6 background order-lg-2 order-1" data-aos="fade-left" data-aos-delay="100"></div>
                </div>

            </div>
        </section><!-- End About Section -->
        <!-- ======= Facts Section ======= -->
        <section id="facts">
            <div class="container" data-aos="fade-up">
                <div class="section-header">
                    <h3 class="section-title">Sitemiz</h3>
                    <p class="section-description">Sitemizdeki istatikler</p>
                </div>
                <div class="row counters">

                    <div class="col-lg-3 col-6 text-center">
                        <span data-purecounter-start="0" data-purecounter-end=@ViewBag.kullanicisayisi data-purecounter-duration="1" class="purecounter"></span>
                        <p>Kullanıcı Sayısı</p>
                    </div>

                    <div class="col-lg-3 col-6 text-center">
                        <span data-purecounter-start="0" data-purecounter-end=@ViewBag.kurumsayisi data-purecounter-duration="1" class="purecounter"></span>
                        <p>Kurum Sayısı</p>
                    </div>

                    <div class="col-lg-3 col-6 text-center">
                        <span data-purecounter-start="0" data-purecounter-end=@ViewBag.departmansayisi data-purecounter-duration="1" class="purecounter"></span>
                        <p>Departman Sayısı</p>
                    </div>

                    <div class="col-lg-3 col-6 text-center">
                        <span data-purecounter-start="0" data-purecounter-end=@ViewBag.stajyersayisi data-purecounter-duration="1" class="purecounter"></span>
                        <p>Stajyer Sayısı</p>
                    </div>

                </div>

            </div>
        </section><!-- End Facts Section -->


    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">

            </div>
        </div>


    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z" />
</svg></a>

    <!-- Vendor JS Files -->

    <script src="~/Css/vendor/purecounter/purecounter_vanilla.js"></script>

    <script src="~/Css/vendor/aos/aos.js"></script>

    <script src="~/Css/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/Css/vendor/glightbox/js/glightbox.min.js"></script>

    <script src="~/Css/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <script src="~/Css/vendor/swiper/swiper-bundle.min.js"></script>

    <script src="~/Css/vendor/php-email-form/validate.js"></script>
    <!-- Template Main JS File -->

    <script src="~/Css/vendor/regna.js"></script>
</body>

</html>