@using StajYonetimBilgiSistemi.Models.Entity
@model List<StajYonetimBilgiSistemi.Models.Entity.KURUM_DEPARTMAN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kurum Departman Sayfası</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                 ID
            </td>
            <td>
                Kurum 
            </td>
            <td>
                Adı
            </td>
            <td>
                Aktif
            </td>
            <td>
                Sil
            </td>
            <td>
                Güncelle
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PK_KURUM_DEPARTMAN</td>
                <td>@item.KURUM_TANIM.FIRMA_ADI</td>
                <td>@item.ADI</td>
               
                <td >
                    @if(@item.AKTIF==1)
                {
                    <b>açık</b>
                } else { 
                    <b>kapalı</b>
                    }

                </td>
           
                <td><a href="/KurumDepartman/SilBilgiGetir/@item.PK_KURUM_DEPARTMAN" class="btn btn-danger">Sil</a></td>
                <td><a href="/KurumDepartman/GuncelleBilgiGetir/@item.PK_KURUM_DEPARTMAN" class="btn btn-warning">Güncelle</a></td>

            </tr>
        }
    </tbody>
</table>
<a href="/KurumDepartman/DepartmanEkle/" class="btn btn-success" style="margin-top">Departman Ekle</a>