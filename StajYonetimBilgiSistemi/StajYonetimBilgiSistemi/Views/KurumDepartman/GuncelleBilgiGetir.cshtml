@model StajYonetimBilgiSistemi.Models.Entity.KURUM_DEPARTMAN
@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align:center;">Kurum Departman Bilgileri</h2>


<div class="container">
    <form action="/KurumDepartman/Guncelle/" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.PK_KURUM_DEPARTMAN)
        <div class="form-group" style="width:520px;float:left;">
            <b>Kurum Tanım </b>

            @Html.DropDownListFor(m => m.FK_KURUM_TANIM, (List<SelectListItem>)ViewBag.dgr, "---Seçiniz---", new { @class = "form-control" })

        </div>
        <div class="form-group" style="width:520px;float:right;">
            <b>Adı </b>

            @Html.TextBoxFor(x => x.ADI, new { @class = "form-control" })

        </div>
        <div style="clear:both;"></div>
        <div class="form-group" style="width:520px;">
            <select name="AKTIF">
                <option value="1">Açık</option>
                <option value="0">Kapalı</option>

            </select>

        </div>


        <div>
            <button class="btn btn-primary"> Güncelle</button>
            <a href="/KurumDepartman/Index/">Departman Listesi </a>
        </div>
    </form>
</div>