@model StajYonetimBilgiSistemi.Models.Entity.KURUM_DEPARTMAN
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;">Kurum Departman </h2>
<div class="container">
    <form action="/KurumDepartman/DepartmanEkle2/" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group" style="width:520px;float:left;">
            <label>Kurum Tanım</label>
            @Html.DropDownListFor(m => m.FK_KURUM_TANIM, (List<SelectListItem>)ViewBag.dgr, "---Seçiniz---", new { @class = "form-control" })


        </div>
        <div class="form-group" style="width:520px;float:right;">
            <label>Adı</label>
            <input type="text" name="ADI" class="form-control" />

        </div>
        <div style="clear:both;"></div>
        <div class="form-group" style="width:520px;">
            <select name="AKTIF">
                <option value="1">Açık</option>
                <option value="0">Kapalı</option>

            </select>

        </div>

        <div class="form-group">
            <button class="btn btn-success"> Ekle</button>
            <a href="/KurumDepartman/Index/">Departman Listesi <a>
        </div>
    </form>
    <div class="w3-panel w3-red" style="float:right;">
        <h3 style="color:red;">@TempData["mesaj"]</h3>
    </div>
</div>