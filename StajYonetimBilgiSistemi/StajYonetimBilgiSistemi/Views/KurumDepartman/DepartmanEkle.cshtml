@model StajYonetimBilgiSistemi.Models.Entity.KURUM_DEPARTMAN
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <form action="/KurumDepartman/DepartmanEkle2/">

        <div class="form-group">
            <label>Kurum Tanım</label>
            @Html.DropDownListFor(m => m.FK_KURUM_TANIM, (List<SelectListItem>)ViewBag.dgr, "---Seçiniz---", new { @class = "form-control" })


        </div>
        <div class="form-group">
            <label>Adı</label>
            <input type="text" name="ADI" class="form-control" />

        </div>
        <div class="form-group">
            <label>Aktiflik (0 veya 1)</label>
            <input type="text" name="AKTIF" class="form-control" />

        </div>

        <div class="form-group">
            <button class="btn btn-success">Departman Ekle</button>
        </div>
    </form>
</div>