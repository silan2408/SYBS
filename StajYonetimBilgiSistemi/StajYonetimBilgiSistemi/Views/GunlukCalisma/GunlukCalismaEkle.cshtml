@model StajYonetimBilgiSistemi.Models.Entity.GUNLUK_CALISMA
@{
    ViewBag.Title = "GunlukCalismaEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <form action="/GunlukCalisma/GunlukCalismaEkle2/" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Stajyer Seç</label>

            @Html.DropDownListFor(m => m.FK_STAJYER_TANIM, (List<SelectListItem>)ViewBag.dgr, "---Seçiniz---", new { @class = "form-control" })

            
        </div>

        <div class="form-group">
            <label for="TARIH">Tarih :</label>
            <br />
            <input type="datetime-local" id="TARIH" name="TARIH">
        </div>

        <div class="form-group">
            <label>Açıklama :</label>
            <br />  &nbsp; &nbsp; &nbsp;
            <textarea name="ACIKLAMA"
                      rows="10" cols="150"
                      tabindex="40"></textarea>

        </div>

        <div class="form-group">
            <button class="btn btn-success">Gunluk Çalışma Ekle</button>
            <a href="/GunlukCalisma/Index/">Geri Dön </a>
        </div>

    </form>
</div>
