@using StajYonetimBilgiSistemi.Models.Entity
@*@model List<StajYonetimBilgiSistemi.Models.Entity.STAJYER_TANIM>*@
@model List<StajYonetimBilgiSistemi.Models.Entity.GUNLUK_CALISMA>
@{
    ViewBag.Title = "Index";
    Layout = null;
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}
<script src="~/vendor/jquery/jquery-1.10.2.min.js"></script>


<p style="text-align:center;font-size:large;">Günlük Çalışma Listesi</p>

<table class="table table-bordered " style="align-self:center;" border="1" cellpadding="3" cellspacing="3">
    <thead>
        <tr style="text-align:center;font-size:medium">
            <td>
                Tarih
            </td>
            <td>
                Açıklama
            </td>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr style="text-align: center; font-size: medium">

                <td>@item.TARIH.ToShortDateString()</td>
                <td>@item.ACIKLAMA</td>


            </tr>

        }
    </tbody>


</table>


