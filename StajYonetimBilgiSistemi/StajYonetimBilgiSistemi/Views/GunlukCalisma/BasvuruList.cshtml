@model StajYonetimBilgiSistemi.Models.Entity.Basvuru
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Staj Yönetim Bilgi Sistemi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="colorlib.com">

    <link href="~/fonts/material-design-iconic-font.css" rel="stylesheet" />

    <!-- STYLE CSS -->
    <link href="~/Css/form.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        <form action="/GunlukCalisma/BasvuruList/" method="post">
            <div id="wizard">
                <!-- SECTION 1 -->
                <h4></h4>
                <section>
                    <div class="form-header">

                        <div class="avartar">
                            <a href="#">

                                <img src="~/image/avartar.png" alt="" />
                            </a>
                            <div class="avartar-picker">
                                <input type="file" name="Resim" id="file-1" class="inputfile" />
                                <label for="file-1">
                                    <i class="zmdi zmdi-camera"></i>
                                    <span>Choose Picture</span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-holder active">
                                <input type="text" placeholder="Adınız" name="Ad" class="form-control">
                            </div>
                            <div class="form-holder">
                                <input type="text" placeholder="Soyadınız" name="Soyad" class="form-control">
                            </div>
                            <div class="form-holder">
                                <label>Doğum Tarihiniz</label>
                                <input type="date" placeholder="Doğum Tarihi" name="DogumTarihi" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-holder">
                        <input type="email" placeholder="Email" name="Mail" class="form-control">
                    </div>
                    <div class="form-holder">
                        <input type="tel" placeholder="Telefon" name="Tel" class="form-control">
                    </div>
                    <div class="form-holder" style="font-size:medium;">
                        <label>Cinsiyet</label>
                        <br />
                        <select name="Cinsiyet" style="font-size:medium;width:50px;">
                            <option value=null>Seçiniz.....</option>
                            <option value=1>Kadın</option>
                            <option value=2>Erkek</option>



                        </select>

                    </div>
                </section>

                <!-- SECTION 2 -->
                <h4></h4>
                <section>

                    <div class="grid">
                        <div class="form-row">
                            <div class="form-holder" style="font-size:medium;">
                                <label>Sınıf</label>
                                <br />
                                <select name="Staj_Sınıflar" style="font-size:medium;width:50px;">
                                    <option value=null>Seçiniz.....</option>
                                    <option value=1>lise 1</option>
                                    <option value=2>lise 2</option>
                                    <option value=3>lise 3</option>
                                    <option value=4>lise 4</option>
                                    <option value=4>Üni hazırlık</option>
                                    <option value=1>1. sınıf</option>
                                    <option value=2>2. sınıf</option>
                                    <option value=3>3. sınıf</option>
                                    <option value=4>4. sınıf</option>


                                </select>

                            </div>

                            <div class="form-holder">
                                <label>Üniversite</label>
                                @Html.DropDownListFor(m => m.Uni_Id, (List<SelectListItem>)ViewBag.dgr4, "---Seçiniz---", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-holder">
                                <label>Bölümü</label>

                                @Html.DropDownListFor(m => m.Bolum_Id, (List<SelectListItem>)ViewBag.dgr5, "---Seçiniz---", new { @class = "form-control" })

                            </div>

                            <div class="form-holder">
                                <label>Üniversite No</label>
                                <input type="text" placeholder="UniNo" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="form-holder" style="font-size:medium;">
                                <label>Yabancı Dil</label>
                                <br />
                                <select name="YabanciDil" style="font-size:medium;width:50px;">
                                    <option value=null>Seçiniz.....</option>
                                    <option value="İngilizce">İngilizce</option>
                                    <option value="Almanca">Almanca</option>
                                    <option value="Fransızca">Fransızca</option>



                                </select>

                            </div>
                            <div class="form-holder" style="font-size:medium;">
                                <label>Seviye</label>
                                <br />
                                <select name="Cinsiyet" style="font-size:medium;width:50px;">
                                    <option value=null>Seçiniz.....</option>
                                    <option value="A1">A1</option>
                                    <option value="A2">A2</option>
                                    <option value="B1">B1</option>
                                    <option value="B2">B2</option>
                                    <option value="C1">C1</option>
                                    <option value="C2">C2</option>



                                </select>

                            </div>
                        </div>

                        <div class="form-row">

                            <div class="form-holder">
                                <label>Adres</label>
                                <input type="text" placeholder="Adres" class="form-control">
                            </div>
                        </div>
                    </div>
                </section>

                <!-- SECTION 3 -->
                <h4></h4>
             
                <section>

                    <div class="form-row">
                        <div class="form-holder">
                            <label>CV ekleyin.</label>
                            <input type="file" placeholder="CV" name="CV" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                      
                            <div class="form-holder">
                                <label>Başvuru Yazısı</label>
                                <input type="text" name="BasvuruYazisi" placeholder="CV" class="form-control" />
                            </div>
                      
                    </div>
                </section>
            </div>
        </form>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>


    <!-- JQUERY STEP -->
    <script src="~/Scripts/jquery.steps.js"></script>
    <script src="~/Scripts/form.js"></script>
    <!-- Template created and distributed by Colorlib -->
</body>
</html>
