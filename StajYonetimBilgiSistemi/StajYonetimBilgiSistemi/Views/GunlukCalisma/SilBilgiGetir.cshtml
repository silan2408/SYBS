@model StajYonetimBilgiSistemi.Models.Entity.GUNLUK_CALISMA
@{
    ViewBag.Title = "SilBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;"> Günlük Çalışma Bilgileri</h2>
&nbsp; &nbsp;

<div class="container">
    @using (Html.BeginForm("Sil", "GunlukCalisma"))
    {@Html.HiddenFor(x => x.PK_GUNLUK_CALISMA)
    <div class="form-group" style="background-color: #b200ff; color: #fff; border-radius: 30px; padding: 10px; margin: auto; margin-bottom: 15px; font-size: 100%; grid-column: 1; width: 500px; grid-row: 1; text-align: left; ">

        <b>Stajyer Adı :</b>
        @Html.DisplayFor(x => x.STAJYER_TANIM.ADI, new { @class = "form-control" })
    </div>
  
    <div style="clear:both;"></div>
    <div class="form-group" style="background-color: #808080; color: #fff; border-radius: 30px; padding: 10px;float:left; font-size: 100%; grid-column: 1 ;width:500px; grid-row: 1; text-align: left; ">
        <b>Başlık :</b>
        @Html.DisplayFor(x => x.Baslik, new { @class = "form-control" })
    </div>
    <div class="form-group" style="background-color: #808080; color: #fff; border-radius: 30px; padding: 10px;float:right; font-size: 100%; grid-column: 1 ;width:500px; grid-row: 1; text-align: left; ">
        <b>Tarih :</b>
        @Html.DisplayFor(x => x.TARIH, new { @class = "form-control" })
    </div>
    <div style="clear:both;"></div>
    <div class="form-group" style="background-color: #808080; color: #fff; border-radius: 30px; padding: 10px;float:left; font-size: 100%; grid-column: 1 ;width:1100px; grid-row: 1; text-align: left; ">
        <b>Açıklama :</b>
        @Html.Raw(Model.ACIKLAMA)
    </div>
    <div style="clear:both;"></div>
    <div>
        <button style="background-color: cornflowerblue; border-color: cornflowerblue " class="btn btn-danger" onclick="return confirm('Are sure wants to delete?');"> Sil</button>
        <a style=" border: 1px solid #42e0ea; background-color: #42e0ea; padding: 8px; border-radius: 5px;color:white;" href="/GunlukCalisma/Index/">Geri Dön  </a>
    </div>
}
</div>
