@model StajYonetimBilgiSistemi.Models.Entity.GUNLUK_CALISMA
@{
    ViewBag.Title = "SilBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SilBilgiGetir</h2>
<div class="container">
    @using (Html.BeginForm("Sil", "GunlukCalisma"))
    {
        <div class="form-group">
            @Html.HiddenFor(x=>x.PK_GUNLUK_CALISMA)
