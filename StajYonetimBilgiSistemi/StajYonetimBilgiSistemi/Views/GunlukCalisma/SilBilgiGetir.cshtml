            @Html.DisplayFor(x => x.STAJYER_TANIM.ADI, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <b>@Html.LabelFor(x => x.TARIH):</b> 
            @Html.DisplayFor(x => x.TARIH, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <b>@Html.LabelFor(x => x.ACIKLAMA):</b>
            @Html.DisplayFor(x => x.ACIKLAMA, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-danger">Günlük Çalışma Sil</button>
            <a href="/Kullanici/KullaniciList/">Ana Sayfa </a>
        </div>
    }
</div>
