                                                }
                                                @if (@ViewBag.uzanti3 == ".jpeg")
                                                {
                                                    <span class="mailbox-attachment-icon"><i class="far fa-file-image"></i></span>

                                                    <div class="mailbox-attachment-info">
                                                        <img style="resize:initial" src="@Url.Content(item.Dosyalar3)" class="mailbox-attachment-name" />
