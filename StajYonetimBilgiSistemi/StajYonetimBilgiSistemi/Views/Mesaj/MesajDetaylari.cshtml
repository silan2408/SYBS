                                                    <div class="mailbox-attachment-info">
                                                        <a href="@Url.Content(item.Dosyalar2)" class="mailbox-attachment-name">
                                                            <i class="fas fa-paperclip"></i>@item.Dosyalar2.Substring(0, item.Dosyalar2.Length - 3)
                                                        </a>
                                                        <span class="mailbox-attachment-size clearfix mt-1">
                                                            <span>@((byte)item.Dosyalar2.Length)</span>

