                                            </li>

                                        </ul>
                                    </div>
                                }   
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
     
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script>
